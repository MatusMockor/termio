<?xml version="1.0"?>
<ruleset name="Laravel Project PHPMD Rules"
         xmlns="http://pmd.sf.net/ruleset/1.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sf.net/ruleset/1.0.0 http://pmd.sf.net/ruleset_xml_schema.xsd"
         xsi:noNamespaceSchemaLocation="http://pmd.sf.net/ruleset_xml_schema.xsd">

    <description>Custom PHPMD ruleset for Laravel project - Strict Level 5</description>

    <!-- Exclude paths -->
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/node_modules/*</exclude-pattern>
    <exclude-pattern>*/storage/*</exclude-pattern>
    <exclude-pattern>*/bootstrap/cache/*</exclude-pattern>
    <exclude-pattern>*/database/migrations/*</exclude-pattern>
    <exclude-pattern>*/database/seeders/*</exclude-pattern>
    <exclude-pattern>*/_ide_helper*.php</exclude-pattern>
    <exclude-pattern>*/public/*</exclude-pattern>

    <!-- ============================================ -->
    <!-- CLEAN CODE RULES                             -->
    <!-- ============================================ -->
    <rule ref="rulesets/cleancode.xml">
        <!-- Exclude StaticAccess - Laravel facades use static access -->
        <exclude name="StaticAccess"/>
    </rule>

    <!-- ElseExpression - Detects else statements (project prefers guard clauses) -->
    <rule ref="rulesets/cleancode.xml/ElseExpression"/>

    <!-- ============================================ -->
    <!-- CODE SIZE RULES - STRICT                     -->
    <!-- ============================================ -->

    <!-- Cyclomatic Complexity: max 10 (stricter than default 20) -->
    <rule ref="rulesets/codesize.xml/CyclomaticComplexity">
        <properties>
            <property name="reportLevel" value="10"/>
        </properties>
    </rule>

    <!-- NPath Complexity: max 200 (stricter than default 1000) -->
    <rule ref="rulesets/codesize.xml/NPathComplexity">
        <properties>
            <property name="minimum" value="200"/>
        </properties>
    </rule>

    <!-- Method Length: max 50 lines (strict) -->
    <rule ref="rulesets/codesize.xml/ExcessiveMethodLength">
        <properties>
            <property name="minimum" value="50"/>
        </properties>
    </rule>

    <!-- Class Length: max 500 lines (strict) -->
    <rule ref="rulesets/codesize.xml/ExcessiveClassLength">
        <properties>
            <property name="minimum" value="500"/>
        </properties>
    </rule>

    <!-- Too Many Public Methods: max 15 -->
    <rule ref="rulesets/codesize.xml/TooManyPublicMethods">
        <properties>
            <property name="maxmethods" value="15"/>
        </properties>
    </rule>

    <!-- Too Many Methods: max 20 -->
    <rule ref="rulesets/codesize.xml/TooManyMethods">
        <properties>
            <property name="maxmethods" value="20"/>
        </properties>
    </rule>

    <!-- Excessive Parameter List: max 5 parameters -->
    <rule ref="rulesets/codesize.xml/ExcessiveParameterList">
        <properties>
            <property name="minimum" value="5"/>
        </properties>
    </rule>

    <!-- Too Many Fields: max 15 -->
    <rule ref="rulesets/codesize.xml/TooManyFields">
        <properties>
            <property name="maxfields" value="15"/>
        </properties>
    </rule>

    <!-- ============================================ -->
    <!-- DESIGN RULES                                 -->
    <!-- ============================================ -->
    <rule ref="rulesets/design.xml">
        <!-- Exclude CouplingBetweenObjects - configure separately -->
        <exclude name="CouplingBetweenObjects"/>
    </rule>

    <!-- Coupling Between Objects: max 15 dependencies -->
    <rule ref="rulesets/design.xml/CouplingBetweenObjects">
        <properties>
            <property name="maximum" value="15"/>
        </properties>
    </rule>

    <!-- ============================================ -->
    <!-- NAMING RULES                                 -->
    <!-- ============================================ -->
    <rule ref="rulesets/naming.xml">
        <!-- Exclude and reconfigure -->
        <exclude name="ShortVariable"/>
        <exclude name="LongVariable"/>
        <exclude name="ShortMethodName"/>
    </rule>

    <!-- Short Variable: min 2 chars, allow common exceptions -->
    <rule ref="rulesets/naming.xml/ShortVariable">
        <properties>
            <property name="minimum" value="2"/>
            <property name="exceptions" value="id,e,i,j,k,n,x,y,db"/>
        </properties>
    </rule>

    <!-- Long Variable: max 30 chars -->
    <rule ref="rulesets/naming.xml/LongVariable">
        <properties>
            <property name="maximum" value="30"/>
        </properties>
    </rule>

    <!-- Short Method Name: min 3 chars -->
    <rule ref="rulesets/naming.xml/ShortMethodName">
        <properties>
            <property name="minimum" value="3"/>
            <property name="exceptions" value="id,up"/>
        </properties>
    </rule>

    <!-- ============================================ -->
    <!-- UNUSED CODE RULES                            -->
    <!-- ============================================ -->
    <rule ref="rulesets/unusedcode.xml">
        <!-- Keep all unused code checks -->
    </rule>

    <!-- ============================================ -->
    <!-- CONTROVERSIAL RULES (Optional - Strict)     -->
    <!-- ============================================ -->
    <!-- Superglobals - detect direct access to $_GET, $_POST etc. -->
    <rule ref="rulesets/controversial.xml/Superglobals"/>

</ruleset>
