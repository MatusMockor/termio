includes:
    - vendor/larastan/larastan/extension.neon

parameters:
    level: 5

    paths:
        - app

    excludePaths:
        - bootstrap/cache
        - storage
        - vendor
        - node_modules (?)
        - public/build (?)
        - _ide_helper*.php

    # Laravel-specific settings
    checkModelProperties: true
    checkOctaneCompatibility: false

    # Report settings
    reportUnmatchedIgnoredErrors: false

    # Ignore specific errors (if needed)
    ignoreErrors:
        # Ignore PHPMD @SuppressWarnings PHPDoc parse errors
        - '#PHPDoc tag @SuppressWarnings has invalid value#'
